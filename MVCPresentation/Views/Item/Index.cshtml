@model IEnumerable<DataObjects.Item>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ItemName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="~/Content/Images/icons/@(item.ItemID).png " />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ItemName)
        </td>
        <td>
            @Html.ActionLink("Edit Stats", "EditStats", new { id = item.ItemID }) |
            @Html.ActionLink("Edit Item", "EditItem", new { id = item.ItemID }) |
            @Html.ActionLink("Details", "Details", new { id = item.ItemID }) |
            @*@Html.ActionLink("Delete", "Delete", new { id=item.ItemID })*@
        </td>
    </tr>
}

</table>
